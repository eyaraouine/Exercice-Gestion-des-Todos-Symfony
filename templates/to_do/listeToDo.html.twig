<!doctype html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport"
          content="width=device-width, user-scalable=no, initial-scale=1.0, maximum-scale=1.0, minimum-scale=1.0">
    <meta http-equiv="X-UA-Compatible" content="ie=edge">
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.1.3/dist/css/bootstrap.min.css" rel="stylesheet" integrity="sha384-1BmE4kWBq78iYhFldvKuhfTAU6auU8tT94WrHftjDbrCEXSU1oBoqyl2QvZ6jIW3" crossorigin="anonymous">
    <title>liste des Todos</title>
</head>
<body>

{% for valeur in app.session.flashbag.get('successAdd') %}
    <div class="alert alert-success">{{ valeur }}</div>
{% endfor %}
{% for valeur in app.session.flashbag.get('successUpdate') %}
    <div class="alert alert-success">{{ valeur }}</div>
{% endfor %}
{% for valeur in app.session.flashbag.get('errorInitialize') %}
    <div class="alert alert-danger">{{ valeur }}</div>
{% endfor %}

{% for valeur in app.session.flashbag.get('errorDelete') %}
    <div class="alert alert-danger">{{ valeur }}</div>
{% endfor %}
{% for valeur in app.session.flashbag.get('successDelete') %}
    <div class="alert alert-success">{{ valeur }}</div>
{% endfor %}

{% for valeur in app.session.flashbag.get('successInitialize') %}
    <div class="alert alert-success">{{ valeur }}</div>
{% endfor %}

{% for valeur in app.session.flashbag.get('successReset') %}
    <div class="alert alert-success">{{ valeur }}</div>
{% endfor %}

<div class="container">
    <h1 class="text-primary">ToDo Liste </h1><br>
<ol class="list-group">

{% for cle,element in app.session.get("listeTodos")  %}
    <div class="list-group-item"> <h5> {{ cle }} : </h5>
            {{ element}} </div>
{% endfor %}
</ol>

</div>
</body>
</html>